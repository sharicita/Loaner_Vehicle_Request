        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Is there an open Service ticket associated to the Vehicle tracker?
    var vhServicing = new GlideRecord('x_1553691_lva_vehicle_servicing');
    vhServicing.addQuery('vehicle_tracker', current.sys_id);
    vhServicing.addQuery('ticket_status', 'open');
    vhServicing.query();

    if (!vhServicing.next()) {
        var vhServicingNew = new GlideRecord('x_1553691_lva_vehicle_servicing');

        vhServicingNew.initialize();
        vhServicingNew.vehicle_tracker = current.sys_id;
        vhServicingNew.vehicle = current.vehicle;
        vhServicingNew.vehicle_status = 'in_service';
        vhServicingNew.date_sent_for_servicing = new GlideDate();
        vhServicingNew.ticket_status = 'open';     
        vhServicingNew.insert();
    }

})(current, previous);

]]></script>
