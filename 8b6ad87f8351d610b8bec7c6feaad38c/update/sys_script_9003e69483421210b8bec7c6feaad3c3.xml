        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

    var vhStatus = ''; 

    // Check Current Vehicle Status
    switch(current.vehicle_status.toString()) {
        case 'pending_release':
        case 'out_on_field':
        case 'returned_for_inspection':
        case 'sent_for_servicing':
            vhStatus = 'unavailable';
            break;
        case 'returned_to_warehouse':
            vhStatus = 'available';
            break;
        case 'decommissioned':
            vhStatus = 'decommissioned';
            break;
    }

    // Loaner Vehicle Catalog
    var lvCatalog = new GlideRecord('x_1553691_lva_loaner_vehicle_catalog');
    
    // Check if the current vehicle exists in the catalog
    if (lvCatalog.get(current.vehicle)) {
        // Update the record's status with the result of the switch statement

        lvCatalog.status = vhStatus;
        lvCatalog.update(); 
    }

})(current, previous);]]></script>
